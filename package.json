{
  "name": "vscode-playwright-test-runner",
  "displayName": "Playwright Test Runner",
  "description": "Simple way to run or debug a single (or multiple) tests from context-menu",
  "version": "0.2.2",
  "publisher": "sakamoto66",
  "author": {
    "name": "sakamoto66",
    "email": "sakamoto0322+github@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sakamoto66/vscode-playwright-test-runner.git"
  },
  "license": "MIT",
  "icon": "public/icon.png",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Jest and Playwright-Runner Config",
        "properties": {
          "playwrightrunner.jestConfigPath": {
            "type": "string",
            "default": "",
            "description": "Jest config path (relative to ${workFolder} e.g. jest.config.js)",
            "scope": "window"
          },
          "playwrightrunner.playwrightConfigPath": {
            "type": "string",
            "default": "",
            "description": "Playwright config path (relative to ${workFolder} e.g. playwright.config.js)",
            "scope": "window"
          },
          "playwrightrunner.jestPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to jest bin file (e.g. /usr/lib/node_modules/jest/bin/jest.js)",
            "scope": "window"
          },
          "playwrightrunner.playwrightPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to jest bin file (e.g. /usr/lib/node_modules/playwright/lib/cli/cli.js)",
            "scope": "window"
          },
          "playwrightrunner.projectPath": {
            "type": "string",
            "default": "${packageRoot}",
            "description": "Absolute path to project directory (e.g. /home/me/project/sub-folder)",
            "scope": "window"
          },
          "playwrightrunner.jestDebugOptions": {
            "type": "object",
            "default": {},
            "description": "Add or overwrite vscode debug configurations for Jest (only in debug mode) (e.g. { \"args\": [\"--no-cache\"] })",
            "scope": "window"
          },
          "playwrightrunner.playwrightDebugOptions": {
            "type": "object",
            "default": {},
            "description": "Add or overwrite vscode debug configurations for Playwright (only in debug mode) (e.g. { \"args\": [\"--browser=all\"] })",
            "scope": "window"
          },
          "playwrightrunner.jestRunOptions": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string",
              "description": "CLI Option e.g. --coverage"
            },
            "description": "Add CLI Options to the Jest Command e.g. https://jestjs.io/docs/en/cli",
            "scope": "window"
          },
          "playwrightrunner.playwrightRunOptions": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string",
              "description": "CLI Option e.g. --browser=all"
            },
            "description": "Add CLI Options to the Playwright Command e.g. https://playwright.dev/docs/test-intro",
            "scope": "window"
          },
          "playwrightrunner.jestCommand": {
            "type": "string",
            "default": "",
            "description": "Define an alternative Jest command (e.g. for Create React App and similar abstractions)",
            "scope": "window"
          },
          "playwrightrunner.playwrightCommand": {
            "type": "string",
            "default": "",
            "description": "Define an alternative playwright command (e.g. for Create React App and similar abstractions)",
            "scope": "window"
          },
          "playwrightrunner.disableCodeLens": {
            "type": "boolean",
            "default": false,
            "description": "Disable CodeLens feature",
            "scope": "window"
          },
          "playwrightrunner.codeLensSelector": {
            "type": "string",
            "default": "**/*.{test,spec}.{js,jsx,ts,tsx}",
            "description": "CodeLens will be shown on files matching this pattern"
          },
          "playwrightrunner.enableYarnPnpSupport": {
            "type": "boolean",
            "default": false,
            "description": "Enable if you are using Yarn 2 with Plug'n'Play",
            "scope": "window"
          },
          "playwrightrunner.changeDirectoryToWorkspaceRoot": {
            "type": "boolean",
            "default": true,
            "description": "Changes directory to workspace root before executing the test",
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "playwright.runTest",
        "title": "Run Playwright Test"
      },
      {
        "command": "playwright.runTestAndUpdateSnapshots",
        "title": "Run Playwright Test and Update Snapshots"
      },
      {
        "command": "playwright.runPrevTest",
        "title": "Run Previous Playwright Test"
      },
      {
        "command": "playwright.runTestFile",
        "title": "Run Playwright Test File"
      },
      {
        "command": "playwright.debugTest",
        "title": "Debug Playwright Test"
      },
      {
        "command": "playwright.inspectTest",
        "title": "Inspector Playwright Test"
      },
      {
        "command": "playwright.runTestFileWithCoverage",
        "title": "Run Playwright Test File with Coverage"
      },
      {
        "command": "playwright.showTestReport",
        "title": "Show Playwright Test Suite Report"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "playwright.showTestReport",
          "when": "resourceLangId == json",
          "group": "02_playwright"
        }
      ],
      "editor/context": [
        {
          "command": "playwright.runTest",
          "group": "02_playwright"
        },
        {
          "command": "playwright.debugTest",
          "group": "02_playwright"
        },
        {
          "command": "playwright.showTestReport",
          "when": "resourceLangId == json",
          "group": "02_playwright"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@babel/parser": "^7.14.7",
    "@babel/types": "^7.14.5",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  }
}
