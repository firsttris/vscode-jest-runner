{
  "name": "vscode-playwright-test-runner",
  "displayName": "Playwright Test Runner",
  "description": "Simple way to run or debug a single (or multiple) tests from context-menu",
  "version": "0.1.0",
  "publisher": "sakamoto66",
  "author": {
    "name": "sakamoto66",
    "email": "sakamoto0322+github@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sakamoto66/vscode-jest-runner.git"
  },
  "license": "MIT",
  "icon": "public/icon.png",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": [
      {
        "title": "Jest and Playwright-Runner Config",
        "properties": {
          "jestrunner.jestConfigPath": {
            "type": "string",
            "default": "",
            "description": "Jest config path (relative to ${workFolder} e.g. jest-config.json)",
            "scope": "window"
          },
          "jestrunner.playwrightConfigPath": {
            "type": "string",
            "default": "",
            "description": "Playwright config path (relative to ${workFolder} e.g. playwright.config.js)",
            "scope": "window"
          },
          "jestrunner.jestPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to jest bin file (e.g. /usr/lib/node_modules/jest/bin/jest.js)",
            "scope": "window"
          },
          "jestrunner.playwrightPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to jest bin file (e.g. /usr/lib/node_modules/playwright/lib/cli/cli.js)",
            "scope": "window"
          },
          "jestrunner.projectPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to project directory (e.g. /home/me/project/sub-folder)",
            "scope": "window"
          },
          "jestrunner.jestDebugOptions": {
            "type": "object",
            "default": {},
            "description": "Add or overwrite vscode debug configurations for Jest (only in debug mode) (e.g. { \"args\": [\"--no-cache\"] })",
            "scope": "window"
          },
          "jestrunner.playwrightDebugOptions": {
            "type": "object",
            "default": {},
            "description": "Add or overwrite vscode debug configurations for Playwright (only in debug mode) (e.g. { \"args\": [\"--browser=all\"] })",
            "scope": "window"
          },
          "jestrunner.jestRunOptions": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string",
              "description": "CLI Option e.g. --coverage"
            },
            "description": "Add CLI Options to the Jest Command e.g. https://jestjs.io/docs/en/cli",
            "scope": "window"
          },
          "jestrunner.playwrightRunOptions": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string",
              "description": "CLI Option e.g. --browser=all"
            },
            "description": "Add CLI Options to the Playwright Command e.g. https://playwright.dev/docs/test-intro",
            "scope": "window"
          },
          "jestrunner.jestCommand": {
            "type": "string",
            "default": "",
            "description": "Define an alternative Jest command (e.g. for Create React App and similar abstractions)",
            "scope": "window"
          },
          "jestrunner.playwrightCommand": {
            "type": "string",
            "default": "",
            "description": "Define an alternative playwright command (e.g. for Create React App and similar abstractions)",
            "scope": "window"
          },
          "jestrunner.disableCodeLens": {
            "type": "boolean",
            "default": false,
            "description": "Disable CodeLens feature",
            "scope": "window"
          },
          "jestrunner.codeLensSelector": {
            "type": "string",
            "default": "**/*.{test,spec}.{js,jsx,ts,tsx}",
            "description": "CodeLens will be shown on files matching this pattern"
          },
          "jestrunner.enableYarnPnpSupport": {
            "type": "boolean",
            "default": false,
            "description": "Enable if you are using Yarn 2 with Plug'n'Play",
            "scope": "window"
          },
          "jestrunner.changeDirectoryToWorkspaceRoot": {
            "type": "boolean",
            "default": true,
            "description": "Changes directory to workspace root before executing the test",
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "playwright.runTest",
        "title": "Run Playwright Test"
      },
      {
        "command": "playwright.runTestAndUpdateSnapshots",
        "title": "Run Playwright Test and Update Snapshots"
      },
      {
        "command": "playwright.runPrevTest",
        "title": "Run Previous Playwright Test"
      },
      {
        "command": "playwright.runTestFile",
        "title": "Run Playwright Test File"
      },
      {
        "command": "playwright.debugTest",
        "title": "Debug Playwright Test"
      },
      {
        "command": "playwright.inspectorTest",
        "title": "Inspector Playwright Test"
      },
      {
        "command": "playwright.runTestFileWithCoverage",
        "title": "Run Playwright Test File with Coverage"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "playwright.runTest",
          "group": "02_playwright"
        },
        {
          "command": "playwright.debugTest",
          "group": "02_playwright"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test": "npm run test-compile && node ./out/test/runTest.js",
    "test-compile": "tsc -p ./",
    "publish": "vsce publish patch && git push",
    "eslint:fix": "eslint --cache --fix",
    "prettier": "prettier --write"
  },
  "devDependencies": {
    "@jest/types": "^27.0.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babylon": "^6.18.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.3",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.2",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {}
}
